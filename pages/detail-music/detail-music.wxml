<view class="music-player">

  <!-- 模糊背景层 -->
  <image src="{{musicDetail[0].al.picUrl}}" mode="scaleToFill" class="bg-img" />
  <view class="bg-cover">
  </view>

  <!-- 自定义导航 -->
  <nav-bar></nav-bar>


  <!-- 内容：当使用custom导航时，布局从页面顶部开始 -->
  <view class="content">
