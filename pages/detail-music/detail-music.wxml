      <image class="return" src="/assets/images/icons/arrow-left.png" mode="widthFix" />
      <view class="text">
        <span class=" {{isSongClicked ?'clicked':'' }}" bindtap="handleSongClick">
          歌曲
        </span>
        <span> | </span>
        <span class=" {{isWordClicked ? 'clicked' :'' }}" bindtap="handleWordClick">
          歌词
        </span>
      </view>
    </view> -->

    <!-- 显示歌词或歌曲 -->
    <view class="displaySong" wx:if="{{isSongClicked}}">
      <!-- 作者图 -->
      <image class="songPic" src="{{musicDetail[0].al.picUrl}}" mode="widthFix" />

      <!-- 歌曲相关信息 -->
      <view class="info">
        <view class="name">
          {{musicDetail[0].name}}
        </view>
        <view class="author">
          {{musicDetail[0].ar[0].name}}
        </view>
        <view class="album">
          专辑：{{musicDetail[0].al.name}}
        </view>
      </view>

      <!-- 滚动歌词 -->
      <view class="songWord">
        我是歌词
      </view>
      <!-- 进度条 -->

      <!-- 控制器 -->
    </view>

    <!-- 显示歌词 -->
    <view class="displayWord" wx:else>
      歌词
    </view>
  </view>
</view>