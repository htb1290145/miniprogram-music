/* pages/detail-search/detail-search.wxss */
/* 搜索框滚动时固定 */
.van-search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 54px !important;
  overflow: hidden;
}

/* 热门搜索 */
.hot-search {
  margin-top: 54px;
  padding: 0 12px;
  height: 200px;
}

.hot-search .title {
  font-size: 20px;
  height: 30px;
  line-height: 30px;
  padding: 10px 0;
}

.hot-search .hot-list {
  width: 100%;
  height: 150px;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
}

.hot-list .item {
  background-color: rgb(241, 241, 241);
  height: 30px;
  line-height: 30px;
  margin-right: 20px;
  padding: 0 10px;
  border-radius: 5px;
}
.hot-list .item:first-of-type {
  color: rgb(12, 180, 180);
}

/* 搜索建议 */
.suggest {
  /* display: none; */
  position: absolute;
  top: 50px;
  left: 0;
  z-index: 2;
  padding: 10px 20px;
}
.suggest .title {
  font-size: 20px;
  color: green;
  margin-bottom: 10px;
}
.suggest .item {
  display: flex;
  padding: 10px 0;
  height: 30px;
  line-height: 30px;
}
.item .img {
  width: 30px;
}

/* 歌曲列表 */
.songs-list {
  margin-top: 54px;
}
