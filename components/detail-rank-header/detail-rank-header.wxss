/* components/detail-rank-header/detail-rank-header.wxss */
.detail-rank-header {
  width: 100%;
  height: 200px;
  background-size: 100%;
}
.detail-rank-header .up {
  display: flex;
  width: 100%;
  height: 150px;
  padding: 30px 30px;
  box-sizing: border-box;
}

.up .avatarImg {
  width: 110px;
  height: 110px;
  border-radius: 15px;
  overflow: hidden;
}

.up .info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 60%;
  height: 110px;
  padding-left: 20px;
  box-sizing: border-box;
  color: white;
}

.info .rank-name {
  font-size: 20px;
}
.info .creator {
  display: flex;
  align-items: center;
}

.creator .avatarPic {
  width: 15%;
  border-radius: 50%;
  overflow: hidden;
}

.avatarName {
  font-size: 14px;
  margin-left: 10px;
}

.info .introduction {
  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  /* // 两行 */
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 1;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  /* // normal多行文本，nowarp单行文本 */
  white-space: normal;
  overflow: hidden;
}

.detail-rank-header .down {
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: white;
  font-size: 15px;
}

/* 喜爱和分享 */
.down .faovr,
.down .share {
  display: flex;
  height: 25px;
}

.down .faovr .downImg,
.down .share .downImg {
  width: 25px;
  margin-right: 5px;
}
.down .faovr .faovrCount,
.down .share .text {
  line-height: 25px;
}
