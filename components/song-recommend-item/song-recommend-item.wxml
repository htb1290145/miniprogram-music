<!--components/song-recommend-item/song-recommend-item.wxml-->
<view class="item" bindtap="handleItemClick" data-id="{{musicItem.id}}">
  <image class="pic" src="{{musicItem.al.picUrl}}"></image>
  <view class="info">
    <view class="title">
      {{musicItem.name}}
    </view>
    <view class="author">
      {{musicItem.ar[0].name}}-{{musicItem.originSongSimpleData.artists[0].name}}
    </view>
  </view>
  <image class="more" src="/assets/images/icons/arrow-right.png" mode="widthFix"></image>
</view>